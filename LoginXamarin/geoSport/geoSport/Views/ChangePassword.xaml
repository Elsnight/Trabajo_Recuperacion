<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="geoSport.Views.ChangePassword">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Change Password"
                VerticalOptions="Center" 
                HorizontalOptions="Center"
                   FontSize="Large"/>
            <Entry Placeholder="Nueva contraseña" x:Name="TxtPassword" IsPassword="True"></Entry>
            <Entry Placeholder="Confirmar contraseña" x:Name="TxtConfirm" IsPassword="True"></Entry>
            <Button Text="Cambiar contraseña"
                    CornerRadius="12"
                    Padding="0"
                    BackgroundColor="DeepSkyBlue"
                    x:Name="BtnChangePassword"
                    Clicked="BtnChangePassword_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>